<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    app:cardElevation="10dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_baseline_note_add_24"/>

        <EditText
            android:id="@+id/textaddtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:hint="Nombre del libro"
            android:inputType="textCapWords"
            android:maxLines="1" />

        <EditText
            android:id="@+id/textaddautor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:hint="Autor"
            android:inputType="textCapWords"
            android:maxLines="1" />

        <EditText
            android:id="@+id/textaddcategoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:hint="Género"
            android:inputType="textCapWords"
            android:maxLines="1" />

        <EditText
            android:id="@+id/textaddeditorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:hint="Editorial"
            android:inputType="textCapWords"
            android:maxLines="1"
            />

        <EditText
            android:id="@+id/textadddescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:hint="Descripción"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:minLines="3"
            android:gravity="top|left"
            android:scrollbars="vertical"/>

        <Button
            android:id="@+id/btnRegisterNota"
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/purplenw"
            android:textStyle="bold"
            android:text="Guardar"/>


    </LinearLayout>


</androidx.cardview.widget.CardView>